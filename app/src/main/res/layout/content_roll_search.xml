<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/logos"
   app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_roll_search"
    tools:context="com.hussen.anwar.mbstuseatplan_2015.RollSearchActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Unit"
        android:textSize="30sp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_marginTop="41dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Roll"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/textView4"
        android:layout_above="@+id/editTextRollNumber"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Roll Number e.g 12345    "

        android:ems="10"
        android:id="@+id/editTextRollNumber"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show \nSeat"
        android:textColor="@color/holoOrangeDark"
        android:textSize="25sp"
        android:onClick="seatPlan"
        android:id="@+id/button2"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:id="@+id/linearLayout"
    android:layout_alignRight="@+id/button2"
    android:layout_alignEnd="@+id/button2">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About us"
        android:layout_weight=".4"
        android:textColor="@color/holoOrangeDark"
        android:textSize="25sp"
        android:id="@+id/button3"
        android:background="@color/colorPrimaryDark"
        android:onClick="aboutUs"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Important Notice"
        android:textColor="@color/holoOrangeDark"
        android:textSize="25sp"
        android:id="@+id/button4"
        android:layout_weight=".6"
        android:background="@color/colorPrimaryDark"
        android:onClick="importantNotice"
        android:layout_above="@+id/linearLayout"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

</LinearLayout>


</RelativeLayout>
